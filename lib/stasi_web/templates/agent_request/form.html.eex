<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :url %>
  <%= text_input f, :url %>
  <%= error_tag f, :url %>

  <%= label f, :origin_url %>
  <%= text_input f, :origin_url %>
  <%= error_tag f, :origin_url %>

  <%= label f, :status_code %>
  <%= number_input f, :status_code %>
  <%= error_tag f, :status_code %>

  <%= label f, :completed_at %>
  <%= datetime_select f, :completed_at %>
  <%= error_tag f, :completed_at %>

  <%= label f, :method %>
  <%= text_input f, :method %>
  <%= error_tag f, :method %>

  <%= label f, :content_type %>
  <%= text_input f, :content_type %>
  <%= error_tag f, :content_type %>

  <%= label f, :content_length %>
  <%= number_input f, :content_length %>
  <%= error_tag f, :content_length %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
